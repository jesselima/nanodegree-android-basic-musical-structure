<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.nanodegree.musicalstructure">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/udacity"
        android:label="@string/app_name"
        android:roundIcon="@drawable/udacity"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MusicListActivity"
            android:label="Music List">
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="Now Playing"
            android:parentActivityName=".MusicListActivity">
        </activity>
        <activity
            android:name=".MusicDetailsActivity"
            android:label="Music Details">
        </activity>
        <activity
            android:name=".MusicGenresActivity"
            android:label="Musics Genres">
        </activity>
        <activity
            android:name=".MusicListByGenreActivity"
            android:parentActivityName=".MusicGenresActivity"
            android:label="Musics By Genres">
        </activity>
    </application>

</manifest>