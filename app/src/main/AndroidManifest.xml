<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.nanodegree.musicalstructure">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Music Structure"
            android:name=".SplashScreenActivity" >
        </activity>
        <activity
            android:label="Artists"
            android:name=".ArtistsActivity" >
        </activity>
        <activity
            android:label="Now Playing"
            android:name=".NowPlayingActivity" >
        </activity>
        <activity
            android:label="Songs Details"
            android:name=".SongDetailsActivity" >
        </activity>
        <activity
            android:label="Musics by Genres"
            android:name=".GenresActivity">
        </activity>
        <activity
            android:label="All Songs"
            android:name=".SongsListActivity">
        </activity>
    </application>

</manifest>