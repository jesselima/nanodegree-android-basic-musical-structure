<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_artist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/artist_brent"/>
            <TextView
                android:id="@+id/text_view_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin8"
                android:gravity="center"
                android:text="@string/song_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:typeface="sans"/>
            <TextView
                android:id="@+id/text_view_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/artist_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_sub_heading"
                android:textStyle="italic"
                android:typeface="sans" />
            <TextView
                android:id="@+id/text_view_seek_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text=""/>
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"/>
            <TextView
                android:id="@+id/text_view_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="@string/_0_00"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_previous"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_skip_previous_black_48dp"/>
                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:onClick="goToPlayNow"
                    android:src="@drawable/ic_play_circle_filled_black_48dp"/>
                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_skip_next_black_48dp"/>
                <ImageView
                    android:id="@+id/btn_stop"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_stop_black_48dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pause_black_48dp"/>
            <Button
                style="@style/buttonDefault"
                android:layout_marginBottom="8dp"
                android:onClick="goToSongDetails"
                android:text="SONG DETAILS"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>