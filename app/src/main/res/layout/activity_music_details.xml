<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin16"
    android:orientation="vertical"
    tools:context="com.udacity.nanodegree.musicalstructure.MusicDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_artist"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/layout_margin8"
                android:layout_marginTop="@dimen/layout_margin8"
                android:src="@drawable/artist_brent"/>
            <TextView
                android:id="@+id/text_view_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Song Name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_headline"
                android:textStyle="bold"
                android:typeface="sans"/>
            <TextView
                android:id="@+id/text_view_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin8"
                android:layout_gravity="center"
                android:text="Artist Name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_headline"
                android:textStyle="italic"
                android:typeface="sans" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/year"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_view_song_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/label_year"
                    android:text="2017"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="italic"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_below="@+id/text_view_song_year"/>


                <TextView
                    android:id="@+id/label_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_year"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:text="Genre"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_view_song_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_view_song_year"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/label_genre"
                    android:text="Eletronic"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="italic"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_below="@+id/text_view_song_genres"/>

                <TextView
                    android:id="@+id/label_rhythm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_genre"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/rhythm"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_view_song_rhythm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_view_song_genres"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/label_genre"
                    android:text="@string/fast"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="italic"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_below="@+id/text_view_song_rhythm"/>

                <TextView
                    android:id="@+id/label_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_rhythm"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/duration"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_view_song_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_view_song_rhythm"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@id/label_genre"
                    android:text="@string/_0_00"
                    android:textSize="@dimen/text_size_sub_heading"
                    android:textStyle="italic"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/layout_margin16"
                android:layout_marginBottom="@dimen/layout_margin16"
                android:text="@string/about_artist"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_sub_heading"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/text_view_about_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_margin8"
                android:paddingRight="@dimen/layout_margin8"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/about_artist"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_sub_heading"
                android:textStyle="italic"
                android:typeface="sans"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/image_facebook"
                android:src="@drawable/facebook"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_sub_heading"
                android:text="@string/find_me_on_facebook"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>