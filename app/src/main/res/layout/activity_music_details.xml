<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.udacity.nanodegree.musicalstructure.MusicDetailsActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/image_view_artist"
        android:src="@drawable/artist_brent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/layout_margin16"/>
    <TextView
        android:id="@+id/text_view_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Song Name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_headline"
        android:textStyle="bold"
        android:typeface="sans"/>
    <TextView
        android:id="@+id/text_view_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Artist Name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_headline"
        android:textStyle="italic"
        android:typeface="sans" />
    <TextView
        android:id="@+id/text_view_song_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2017"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_title"
        android:typeface="sans"/>
    <TextView
        android:id="@+id/text_view_song_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_sub_heading"
        android:textStyle="italic"
        android:typeface="sans"/>
    <TextView
        android:id="@+id/text_view_song_rhythm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rhythm"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_sub_heading"
        android:textStyle="italic"
        android:typeface="sans"/>
    <TextView
        android:id="@+id/text_view_song_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_sub_heading"
        android:textStyle="italic"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/text_view_about_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_artist"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_sub_heading"
        android:textStyle="italic"
        android:typeface="sans"/>

</LinearLayout>